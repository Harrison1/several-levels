@import './utils/colors.styl'

body
  color hsla(0, 0%, 0%, 0.8)

a:hover
    text-decoration none

.header-logo-img
    height auto
    margin-bottom 1rem
    max-width 200px

.navbar
    background-color rgba(39, 207, 230, 0.9)
    padding-left 5% 
    padding-right 5%
    -webkit-transition background-color 1s ease
    -moz-transition background-color 1s ease
    -o-transition background-color 1s ease
    transition background-color 1s ease
    
    @media screen and (min-width: 736px)
        background-color rgba(39, 207, 230, 0)

.fill-bg
    background-color rgba(39, 207, 230, 0.9)

.tagline
    font-size 1.5rem

.title
    font-size 2rem
    line-height 2rem
    margin-bottom 0

.intro-text 
    font-weight 300
    line-height 3rem

.sl-font-color 
    color slblue

.f-300
    font-weight 300

.hero-text
    background-color rgba(39, 207, 230, 1)
    color white
    padding 2rem

.sl-header
    align-items center
    background-color rgba(39, 207, 230, 1)
    color white
    display flex
    height 50%vh
    margin-bottom 1.45rem
    position relative
    text-align center
    width 100%
    z-index 10;

    @media screen and (min-width: 736px)
        background-color rgba(39, 207, 230, 0.7)
    
.bar1, .bar2
    width 26px
    height 1px
    background-color white;
    margin 6px 0
    transition: 0.2s

.change .bar1
    -webkit-transform rotate(-45deg) translate(-8px, -1px)
    transform rotate(-45deg) translate(-8px, -1px) ;

.change .bar2
    -webkit-transform rotate(45deg) translate(-5px, 2px)
    transform rotate(45deg) translate(-5px, 2px)

.navbar-dark .navbar-toggler
    border none

.navbar-toggler:focus, .navbar-toggler:hover
    outline: none;

button:hover
    cursor pointer

.cls-1,.cls-2
    fill rgba(255,255,255,0) 
    stroke white
    stroke-miterlimit 10
    
.cls-1
    stroke-width 50px

.cls-2
    stroke-width 5px
    -webkit-transition fill 2s ease-out
    -moz-transition fill 2s ease-out
    -o-transition fill 2s ease-out
    transition fill 2s ease-out

.cls-t 
    fill rgba(255,255,255,0) 
    stroke white 
    stroke-miterlimit 10 
    stroke-width 6px
    -webkit-transition fill 2s ease-out
    -moz-transition fill 2s ease-out
    -o-transition fill 2s ease-out
    transition fill 2s ease-out

.cls-s 
    fill rgba(255,255,255,0) 
    stroke white
    stroke-miterlimit 10
    stroke-width 4px
    -webkit-transition fill 2s ease-out
    -moz-transition fill 2s ease-out
    -o-transition fill 2s ease-out
    transition fill 2s ease-out

.fillw
    fill rgba(255,255,255,1)

.tv
  position absolute
  top 0
  left 0
  z-index 1
  width 100%
  height 50%
  overflow hidden

.showcase-video
    position absolute
    top 50%
    left 50%
    -webkit-transform translateX(-50%) translateY(-50%)
    transform translateX(-50%) translateY(-50%)
    min-width 100%
    min-height 100% 
    width auto
    height auto
    z-index -1000 
    overflow hidden

.svg-logo
    height 250px
    max-width 100%
    width 250px

.svg-logo-h
    height 250px

.sub-text 
    font-size 1.3rem

