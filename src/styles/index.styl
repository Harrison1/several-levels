@import './utils/colors.styl'

body
  color hsla(0, 0%, 0%, 0.8)

a:hover
    text-decoration none

.header-logo-img
    height auto
    margin-bottom 1rem
    max-width 200px

.tagline
    font-size 1.5rem

.title
    font-size 2rem
    line-height 2rem
    margin-bottom 0

.sl-header
    align-items center
    background-color slblue
    color white
    display flex
    height 50%vh
    margin-bottom 1.45rem
    text-align center
    width 100%

.bar1, .bar2
    width 26px
    height 1px
    background-color white;
    margin 6px 0
    transition: 0.2s

.change .bar1
    -webkit-transform rotate(-45deg) translate(-8px, -1px)
    transform rotate(-45deg) translate(-8px, -1px) ;

.change .bar2
    -webkit-transform rotate(45deg) translate(-5px, 2px)
    transform rotate(45deg) translate(-5px, 2px)

.navbar-dark .navbar-toggler
    border none

.navbar-toggler:focus, .navbar-toggler:hover
    outline: none;

button:hover
    cursor pointer

.cls-1,.cls-2
    fill none 
    stroke #fff
    stroke-miterlimit 10
    
.cls-1
    stroke-width 50px

.cls-2
    stroke-width 30px

.cls-t 
    fill none 
    stroke #fff 
    stroke-miterlimit 10 
    stroke-width 8px

.cls-s 
    fill none 
    stroke #fff
    stroke-miterlimit 10
    stroke-width 8px